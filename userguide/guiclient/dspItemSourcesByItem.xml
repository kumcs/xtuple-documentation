                xpointer="element(rightclickViewPOs)" />

    <xi:include href="../widgets/xtreewidget.xml"
                xmlns:xi="http://www.w3.org/2001/XInclude"
                xpointer="element(xtreewidget.menu.exportcontents)" />
  </variablelist>
</section>